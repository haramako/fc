function test_logical_op():void
{
	var T = 1;
	var F = 0;
	assert_true(    T && T , "T&&T");
	assert_true(  !(T && F), "T&&F");
	assert_true(  !(F && T), "F&&T");
	assert_true(  !(F && F), "F&&F");
	assert_true(    T || F , "T||F");
	assert_true(    T || F , "T||F");
	assert_true(    F || T , "F||T");
	assert_true(  !(F || F), "F||F");
}

function test_shift_op():void
{
	var i0 = 0;
	var i1 = 1;
	var i2 = 2;
	var i7 = 7;
	var i20 = 20;
	assert_equal( 1 << 2, 4, "<<" );
	assert_equal( i1 << 2, 4, "<<" );
	assert_equal( i1 << i0, 1, "<<" );
	assert_equal( i1 << i2, 4, "<<" );
	assert_equal( i1 << i7, 128, "<<" );
	
	assert_equal( 20 >> 2, 5, ">>");
	assert_equal( i20 >> 2, 5, ">>");
	assert_equal( i20 >> i0, 20, "<<" );
	assert_equal( i20 >> i2, 5, ">>");
	assert_equal( 0xff >> i7, 1, ">>" );
}

var gi:int;
var gw:int16;

function test_pointer_op():void
{
	var pgi = &gi;
	gi = 99;
	assert_equal( *pgi, 99, "&x" );
	*pgi = 98;
	assert_equal( gi, 98, "*px" );

	var pgw = &gw;
	gw = 9999;
	assert_equal( *pgw, 9999, "&w" );
	*pgw = 9998;
	assert_equal( gw, 9998, "*pw" );

	var i = 99;
	var pi:int* = &i;
	assert_equal( *pi, 99, "&pi" );
	i = 98;
	assert_equal( *pi, 98, "*pi" );

	var w:int16 = 9999;
	var pw:int16* = &w;
	assert_equal( *pw, 9999, "&pi" );
	w = 9998;
	assert_equal( *pw, 9998, "*pi" );
}

function main():void
{
	unittest_run_tests();
}
