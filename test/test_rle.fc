use unittest;
use rle;
use memory;

include( "character.chr" );

const src = [1,1,3, 2,3,4, 5,5,0];
const src2 = [97,97,2,98,98,1,99,99,1,100,100,0];

var dest:int[128];

function test_rle():void
{
	var len = rle_unpack(dest, src);
	assert_equal( len, 8, "len" );
	assert_true( memcmp( dest, [1,1,1,1, 2,3,4, 5], len) == 0, "check" );
	
	len = rle_unpack(dest, src2);
	assert_equal( len, 8, "len" );
	assert_true( memcmp( dest, "aaabbccd", len) == 0, "check" );
}

function main():void
{
	unittest_run_tests();
}
